{
    "name" : "visual-craft/mailer-bundle",
    "license": "MIT",
    "type": "symfony-bundle",
    "description": "Symfony bundle which provides high-level API for emails creation and sending",
    "homepage": "https://github.com/Visual-Craft/mailer-bundle",
    "autoload" : {
        "psr-4": { "VisualCraft\\Bundle\\MailerBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "VisualCraft\\Bundle\\MailerBundle\\Tests\\": "tests/" }
    },
    "require": {
        "php": ">=5.5.0",
        "symfony/framework-bundle": "~2.3|~3.0|~4.0",
        "symfony/swiftmailer-bundle": "~2.3|~3.0|~4.0",
        "symfony/options-resolver": "~2.3|~3.0|~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "symfony/twig-bundle": "~2.3|~3.0|~4.0"
    },
    "suggest": {
        "symfony/twig-bundle": "To use the twig for rendering mail body/subject"
    }
}
